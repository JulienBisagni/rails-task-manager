<div class="container-fluid m-3">
  <div class="row">
    <h1><%= @task.title %></h1>
  </div>
  <div class="row mb-3 btn btn-light">
    <%= @task.details %>
  </div>
    <% completed = @task.completed ? '[x]' : '[ ]'  %>
    <div class="row mb-3">
      <%= link_to mark_as_completed_path(@task), method: :put do %>
        <span><%= completed %></span>
      <% end %>
      <%= link_to 'Completed', task_path(@task)%>
    </div>
    <div class="row mb-3">
      <%= link_to 'Edit', edit_task_path(@task)%>
    </div>
    <div class="row mb-3">
      <%= link_to 'Back to list', tasks_path%>
    </div>
</div>
